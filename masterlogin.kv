<masterLoginFormat>:
    name: "Master Login Screen"
    GridLayout:
        size: root.size
        cols: 1
        pos_hint: {"center_x":.5,"center_y":.5}
        size_hint: (.6, 1)

        Image:
            source : "lock.png"
            anchor_x : "center"
            size_hint : .1,.5

        Label:
            id: usernamePrompt
            text:"MASTER USERNAME"
            font_size: 20
            color : '00FFCE'
            font_name : "Neoteric-32A8.ttf"

        TextInput:
            id: username
            multiline: False
            padding:[20,20,20,20]
            size_hint: .1, .5
            halign : "center"
                
            
        Label:
            id: passwordPrompt
            text:"MASTER PASSWORD"
            font_size: 20
            color : '00FFCE'
            font_name : "Neoteric-32A8.ttf"

        TextInput:
            id: password
            multiline: False
            padding:[20,20,20,20]
            size_hint: .1, .5
            halign : "center"
            font_name : 'password.ttf'

        Button:
            text : "LOGIN"
            bold : True
            font_name : "Neoteric-32A8.ttf" 
            font_size : 20
            size_hint: .5, .5
            on_press: root.button_pressed()

<dashboardFormat>:
    name: "Dashboard"
    Label:
        text: "Successful Login"